{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "miaogu-notepad",
  "version": "1.2.0",
  "identifier": "com.hhyufan.miaogu-notepad",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "喵咕记事本",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "maximizable": true,
        "minimizable": true,
        "closable": true,
        "center": true,
        "decorations": false,
        "transparent": true,
        "devtools": true,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPDATA/**",
          "$RESOURCE/**",
          "**"
        ]
      }
    }
  },
  "plugins": {
    "fs": null,
    "dialog": null,
    "store": null,
    "opener": null,
    "shell": {
      "open": true,
      "scope": [
        {
          "name": "execute-any",
          "cmd": "cmd",
          "args": true
        },
        {
          "name": "powershell-any",
          "cmd": "powershell",
          "args": true
        },
        {
          "name": "open-terminal",
          "cmd": "wt",
          "args": true
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "ext": [
          "txt"
        ],
        "name": "Text File",
        "description": "Plain text file"
      },
      {
        "ext": [
          "md"
        ],
        "name": "Markdown File",
        "description": "Markdown document"
      },
      {
        "ext": [
          "js"
        ],
        "name": "JavaScript File",
        "description": "JavaScript source file"
      },
      {
        "ext": [
          "json"
        ],
        "name": "JSON File",
        "description": "JSON data file"
      },
      {
        "ext": [
          "html"
        ],
        "name": "HTML File",
        "description": "HTML document"
      },
      {
        "ext": [
          "css"
        ],
        "name": "CSS File",
        "description": "CSS stylesheet"
      },
      {
        "ext": [
          "py"
        ],
        "name": "Python File",
        "description": "Python source file"
      },
      {
        "ext": [
          "xml"
        ],
        "name": "XML File",
        "description": "XML document"
      },
      {
        "ext": [
          "log"
        ],
        "name": "Log File",
        "description": "Log file"
      },
      {
        "ext": [
          "cfg"
        ],
        "name": "Configuration File",
        "description": "Configuration file"
      },
      {
        "ext": [
          "ini"
        ],
        "name": "INI File",
        "description": "INI configuration file"
      }
    ]
  }
}